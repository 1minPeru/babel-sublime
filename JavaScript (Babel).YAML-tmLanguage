  flowtype-polymorph:
    # http://flowtype.org/blog/2015/03/12/Bounded-Polymorphism.html
    name: meta.flowtype.polymorph.js
    begin: '<'
    end: '>'
    captures:
      '0': {name: punctuation.definition.flowtype}
    patterns:
    - include: '#flowtype-tokens'

  flowtype-annotation:
    name: meta.flowtype.annotation.js
    begin: (?:(\?)\s*)?(:)
    beginCaptures:
      '1': {name: keyword.operator.flowtype}
      '2': {name: keyword.operator.flowtype}
    # Line comments are also terminators since semicolons are optional
    end: (?=\s*(?:,|;|=|\)|\]|\}|\{|\n|\/\/))
    applyEndPatternLast: 1
    patterns:
    - include: '#flowtype-tokens'

  # flowtype-parameter:
  #   name: meta.flowtype.parameter.js

  flowtype-tokens:
    patterns:
    - name: constant.other.primitve.flowtype
      match: \b(?:any|bool|boolean|mixed|number|string|void)\b

    - include: '#support'

    - name: keyword.operator.flowtype
      match: (\:|\?|\||\&|\*|\.\.\.|typeof)

    - name: variable.other.flowtype
      match: '[_$a-zA-Z][$\w]*'

    - begin: (?<=:|=>|\(|=)\s*({)
      end: (})
      captures:
        '1': {name: punctuation.section.flowtype}
      patterns:
      - include: '#flowtype-tokens'

    - begin: '<'
      end: '>'
      captures:
        '0': {name: punctuation.section.flowtype}
      patterns:
      - include: '#flowtype-tokens'

    - begin: '(\()'
      end: '(\))(?:\s*(=>))?'
      captures:
        '1': {name: punctuation.section.flowtype}
        '2': {name: keyword.operator.flowtype}
      patterns:
      - include: '#flowtype-tokens'

    - include: '#comments'

  flowtype-declaration:
    patterns:
    - name: meta.flowtype.interface.js
      begin: \b(interface)\b
      beginCaptures:
        '1': {name: keyword.interface.flowtype}
      end: (?<=}|;)
      patterns:
      - include: '#class-like-body'

    - match: \b(declare)\b
      name: keyword.declare.flowtype
      # beginCaptures:
      #   '1': {name: }
      # end: (?<=}|;)
      # patterns:
      # - include: $self

  flowtype-type:
    patterns:
    - name: meta.flowtype.type.js
      begin: \b(type)\b(?=\s+[{_$a-zA-Z])
      beginCaptures:
        '1': {name: storage.type.flowtype}
      end: (?<=}|;)
      patterns:
      - include: '#flowtype-tokens'
      - include: $self
