  curly-brackets:
    name: meta.group.curly.js
    begin: \{
    end: \}
    captures:
      '0': {name: meta.brace.curly.js}
    patterns:
    - include: $self

  round-brackets:
    name: meta.group.round.js
    begin: \(
    end: \)
    captures:
      '0': {name: meta.brace.round.js}
    patterns:
    - include: '#expression'

  square-brackets:
    name: meta.group.square.js
    begin: \[
    end: \]
    captures:
      '0': {name: meta.brace.square.js}
    patterns:
    - include: '#expression'

  comments:
    patterns:
    - name: comment.block.js
      begin: /\*
      end: \*/
      captures:
        '0': {name: punctuation.definition.comment.js}

    - name: comment.block.html.js
      match: (<!--|-->)
      captures:
        '0': {name: punctuation.definition.comment.js}

    - name: comment.line.double-slash.js
      match: (//).*$\n?
      captures:
        '1': {name: punctuation.definition.comment.js}

    - name: comment.line.shebang.js
      match: ^(#!).*$\n?
      captures:
        '1': {name: punctuation.definition.comment.js}

  object-literal:
    name: meta.object.js
    begin: (?<=\(|\[|,|&&|\|\||\?|=|\Wreturn|^return)\s*(\{)
    end: (\})
    captures:
      '1': {name: meta.brace.curly.js}
    patterns:
      - include: '#object-content'

  object-content:
    patterns:
    # Object keys with a function or arrow-function property are captured
    # as "entity.name.function" so they can be found in "Goto Symbol".
    # Computed properties are not matched because it doesn't make sense
    # to call the contents between the square-brackets a function name.
    # e.g. play: function(arg1, arg2) {  }
    # e.g. play: (args) => { }
    - name: meta.object.method-key.js
      match: >-
        (?x)
          (?:
            (([_$a-zA-Z][$\w]*|\d+))                          | # unquoted key (any or number-only identifier)
            ((["'])((?:\\.|(?!\4).)*)(\4))                      # quoted key
          )
          (?=
            \s*:
            \s*(?:async\s+)?
            (?:
              \b(?:function)\b                                | # function
              (?:[_$a-zA-Z][$\w]*\s*(?>:|=>))                 | # arrow-function with single param
              (?:(\((?:(?>[^()]+)|\g<-1>)*\))\s*(?>:|=>))       # arrow-function with parens
            )
          )
      captures:
        '1': {name: string.unquoted.js}
        '2': {name: entity.name.function.js}
        '3': {name: string.quoted.js}
        '4': {name: punctuation.definition.string.js}
        '5': {name: entity.name.function.js}
        '6': {name: punctuation.definition.string.js}

    # e.g. play:
    - name: meta.object.property-key.js
      match: (?<!\.|\?|\?\s)([_$a-zA-Z][$\w]*|\d+)(?=\s*:)
      captures:
        '1': {name: string.unquoted.js}

    # e.g. "play":
    - name: meta.object.property-key.js
      begin: (?<!\?)(?<!\?\s)(?=((["'])((?:\\.|(?!\2).)*)(\2))\s*:)
      end: (?=:)
      patterns:
      - include: '#literal-string'

    # e.g. [play]:
    - name: meta.object.property-key.js
      begin: (?=(\[(?:(?>[^\[\]]+)|\g<-1>)*\])\s*:)
      end: (?=:)
      patterns:
      - include: '#square-brackets'

    - name: meta.object.property-value.js
      begin: ':'
      beginCaptures:
        '0': {name: punctuation.separator.key-value.js}
      end: (?=[,}])
      patterns:
      - name: meta.object.js
        begin: \{
        end: \}
        captures:
          '0': {name: meta.brace.curly.js}
        patterns:
          - include: '#object-content'
      - include: $self

    # [known-issue] In objects, unlike classes, it can't be assumed that a start
    # quote or start square-bracket is for a method. So for multiline method keys
    # and multiline computed methods only the polymorphism contraints and paramaters
    # are matched.
    - name: meta.object.method.multiline-params.js
      begin: (?<=[]"'])\s*(?=[<(])
      end: (?<=})
      patterns:
      - include: '#flowtype-polymorph'
      - include: '#parameters'
      - include: '#flowtype-annotation'
      - include: '#curly-brackets'
      - include: '#comments'

    - include: '#short-method'
    - include: $self

  parameters:
    name: meta.group.parameters.js
    begin: \(
    end: \)
    captures:
      '0': {name: punctuation.definition.parameters.js}
    patterns:
    - include: '#flowtype-annotation'
    - include: '#parameters-content'

  parameters-content:
    patterns:
    - name: variable.parameter.function.js
      match: '[_$a-zA-Z][$\w]*'

    # Default parameters are matched with `#expression` so only the identifier
    # before the `=` gets captured as "variable.paramater".
    - name: meta.parameter.default.js
      begin: (?=[=])
      end: (?=[],)}])
      patterns:
      - include: '#expression'

    - begin: \[
      end: \]
      captures:
        '0': {name: punctuation.definition.destructure.js}
      patterns:
      - include: '#flowtype-annotation'
      - include: '#parameters-content'

    - begin: \{
      end: \}
      captures:
        '0': {name: punctuation.definition.destructure.js}
      patterns:
      - include: '#flowtype-annotation'
      - include: '#parameters-content'

    - include: '#expression'

  short-method:
    patterns:
    - name: meta.method.js
      begin: >-
        (?x)
          (?:
            ([_$a-zA-Z][$\w]*|\d+)             | # any or number-only identifier (also @@ for flow)
            ((["'])((?:\\.|(?!\3).)*)(\3))     |      # string quoted
            (static|@@iterator)                  # special flow method names
          )(?=\s*[<(])
      beginCaptures:
        '1': {name: entity.name.function.js}
        '2': {name: string.quoted.js}
        '3': {name: punctuation.definition.string1.js}
        '4': {name: entity.name.function.js}
        '5': {name: punctuation.definition.string2.js}
        '6': {name: keyword.operator.flowtype}
      # Flow declarations end in `;`
      end: (?=\s*[\n;{])
      patterns:
      - include: '#flowtype-polymorph'
      - include: '#parameters'
      - include: '#flowtype-annotation'
      - include: '#comments'

    - name: meta.method.computed.js
      begin: >-
        (?x)
          (?=
            (?:
              (\[(?:(?>[^\[\]]+)|\g<-1>)*\])|
              (\<(?:(?>[^\<\>]+)|\g<-1>)*\>)
            )
          \s*[<(])
      end: (?=\s*[\n;{])
      patterns:
      - include: '#square-brackets'
      - include: '#flowtype-polymorph'
      - include: '#parameters'
      - include: '#flowtype-annotation'
      - include: '#comments'

    # name: meta.method.computed.js
    # begin: \s*[<(])
    # end: (?=\s*[\n;{])
    # patterns:
    # - include: '#flowtype-polymorph'
    # - include: '#parameters'
    # - include: '#flowtype-annotation'
    # - include: '#comments'

  class-properties:
